    <script src="https://cdnjs.cloudflare.com/ajax/libs/spectrum/1.8.1/spectrum.min.js"></script>
    <script>
        // Default credentials
        const DEFAULT_USERNAME = "wda2310";
        const DEFAULT_PASSWORD = "maret20";
        
        // Current user
        let currentUser = null;

        // Check login
        function checkLogin() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const errorMsg = document.getElementById('errorMsg');
            
            if (username === DEFAULT_USERNAME && password === DEFAULT_PASSWORD) {
                currentUser = username;
                document.getElementById('loginModal').style.display = 'none';
                document.getElementById('mainContainer').style.display = 'grid';
                
                // Update all username displays
                document.getElementById('displayUsername').textContent = username;
                document.getElementById('headerUsername').textContent = username;
                document.getElementById('resultUsername').textContent = username;
                document.getElementById('footerUsername').textContent = username;
                
                // Save to localStorage
                localStorage.setItem('apk_widia_user', username);
                localStorage.setItem('apk_widia_login', 'true');
                
                // Apply saved colors
                loadSavedColors();
                
                console.log('Login successful for user:', username);
            } else {
                errorMsg.style.display = 'block';
                setTimeout(() => {
                    errorMsg.style.display = 'none';
                }, 3000);
            }
        }

        // Auto-login if already logged in
        window.addEventListener('DOMContentLoaded', () => {
            const savedUser = localStorage.getItem('apk_widia_user');
            const isLoggedIn = localStorage.getItem('apk_widia_login');
            
            if (savedUser && isLoggedIn === 'true') {
                currentUser = savedUser;
                document.getElementById('loginModal').style.display = 'none';
                document.getElementById('mainContainer').style.display = 'grid';
                
                // Update all username displays
                document.getElementById('displayUsername').textContent = savedUser;
                document.getElementById('headerUsername').textContent = savedUser;
                document.getElementById('resultUsername').textContent = savedUser;
                document.getElementById('footerUsername').textContent = savedUser;
                
                // Apply saved colors
                loadSavedColors();
            }
            
            // Auto-fill login for convenience
            document.getElementById('username').value = DEFAULT_USERNAME;
            document.getElementById('password').value = DEFAULT_PASSWORD;
        });

        // Color picker functions
        function openColorPicker(colorType) {
            document.getElementById('color' + colorType.charAt(0).toUpperCase() + colorType.slice(1)).click();
        }

        function applyColors() {
            const colors = {
                primary: document.getElementById('colorPrimary').value,
                secondary: document.getElementById('colorSecondary').value,
                accent: document.getElementById('colorAccent').value,
                background: document.getElementById('colorBackground').value,
                success: document.getElementById('colorSuccess').value,
                warning: document.getElementById('colorWarning').value
            };
            
            // Update CSS variables
            document.documentElement.style.setProperty('--primary', colors.primary);
            document.documentElement.style.setProperty('--secondary', colors.secondary);
            document.documentElement.style.setProperty('--accent', colors.accent);
            document.documentElement.style.setProperty('--background', colors.background);
            document.documentElement.style.setProperty('--success', colors.success);
            document.documentElement.style.setProperty('--warning', colors.warning);
            
            // Update color previews
            document.querySelectorAll('.color-preview')[0].style.background = colors.primary;
            document.querySelectorAll('.color-preview')[1].style.background = colors.secondary;
            document.querySelectorAll('.color-preview')[2].style.background = colors.accent;
            document.querySelectorAll('.color-preview')[3].style.background = colors.background;
            document.querySelectorAll('.color-preview')[4].style.background = colors.success;
            document.querySelectorAll('.color-preview')[5].style.background = colors.warning;
            
            // Save to localStorage
            localStorage.setItem('apk_widia_colors', JSON.stringify(colors));
            
            // Show confirmation
            alert('Colors applied successfully!');
        }

        function resetColors() {
            const defaultColors = {
                primary: '#25D366',
                secondary: '#1877F2',
                accent: '#FF0050',
                background: '#0f0f23',
                success: '#00ff41',
                warning: '#ffaa00'
            };
            
            // Reset color inputs
            document.getElementById('colorPrimary').value = defaultColors.primary;
            document.getElementById('colorSecondary').value = defaultColors.secondary;
            document.getElementById('colorAccent').value = defaultColors.accent;
            document.getElementById('colorBackground').value = defaultColors.background;
            document.getElementById('colorSuccess').value = defaultColors.success;
            document.getElementById('colorWarning').value = defaultColors.warning;
            
            // Apply colors
            applyColors();
        }

        function loadSavedColors() {
            const savedColors = localStorage.getItem('apk_widia_colors');
            if (savedColors) {
                const colors = JSON.parse(savedColors);
                
                // Set color inputs
                document.getElementById('colorPrimary').value = colors.primary || '#25D366';
                document.getElementById('colorSecondary').value = colors.secondary || '#1877F2';
                document.getElementById('colorAccent').value = colors.accent || '#FF0050';
                document.getElementById('colorBackground').value = colors.background || '#0f0f23';
                document.getElementById('colorSuccess').value = colors.success || '#00ff41';
                document.getElementById('colorWarning').value = colors.warning || '#ffaa00';
                
                // Apply colors
                applyColors();
            }
        }

        // Generate APK function
        function generateAPK() {
            const apkModal = document.getElementById('apkModal');
            const progressBar = document.getElementById('apkProgressBar');
            const apkStatus = document.getElementById('apkStatus');
            const downloadBtn = document.getElementById('downloadBtn');
            
            apkModal.style.display = 'flex';
            progressBar.style.width = '0%';
            downloadBtn.style.display = 'none';
            
            const steps = [
                'Initializing APK builder...',
                'Processing HTML files...',
                'Adding WebView wrapper...',
                'Configuring Android manifest...',
                'Compiling resources...',
                'Signing APK with debug key...',
                'Optimizing for Android...',
                'Finalizing APK package...'
            ];
            
            let step = 0;
            const interval = setInterval(() => {
                if (step < steps.length) {
                    progressBar.style.width = ((step + 1) / steps.length * 100) + '%';
                    apkStatus.textContent = steps[step];
                    step++;
                } else {
                    clearInterval(interval);
                    apkStatus.textContent = 'APK generated successfully!';
                    downloadBtn.style.display = 'block';
                }
            }, 500);
        }

        function downloadAPK() {
            const appName = document.getElementById('apkName').value || 'APK_WIDIA_v1';
            const packageName = document.getElementById('packageName').value || 'com.wda2310.widia';
            
            // Create a dummy APK file for demonstration
            const apkContent = `APK Generated Successfully!
App Name: ${appName}
Package: ${packageName}
User: ${currentUser || 'wda2310'}
Version: 1.0.0
Date: ${new Date().toLocaleString()}

This is a simulated APK file. In a real implementation,
this would be a complete Android application package.

To convert HTML to real APK, you need to:
1. Use Cordova: cordova create ${packageName}
2. Copy HTML files to www/ folder
3. Add Android platform: cordova platform add android
4. Build APK: cordova build android
5. Find APK at: platforms/android/app/build/outputs/apk/debug/app-debug.apk

Or use online converters:
- https://appmaker.xyz/
- https://gonative.io/
- https://www.webintoapp.com/`;

            const blob = new Blob([apkContent], { type: 'application/vnd.android.package-archive' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${appName.replace(/\s+/g, '_')}.apk`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            // Close modal
            document.getElementById('apkModal').style.display = 'none';
            
            alert(`APK download started!\nFile: ${